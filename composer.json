{
  "name": "wei/wei",
  "description": "A micro-framework provided powerful and simple APIs for faster and easier PHP development.",
  "type": "library",
  "keywords": [
    "framework",
    "cache",
    "database",
    "validator"
  ],
  "homepage": "https://github.com/twinh/wei",
  "license": "MIT",
  "require": {
    "php": ">=7.2"
  },
  "require-dev": {
    "joseph-lenton/php-error": "dev-master",
    "miaoxing/dev": "^9.1.1"
  },
  "authors": [
    {
      "name": "Twin Huang",
      "email": "twinhuang@qq.com",
      "homepage": "https://github.com/twinh/wei"
    }
  ],
  "autoload": {
    "psr-4": {
      "Wei\\": "lib"
    },
    "files": [
      "lib/Wei.php",
      "lib/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "WeiTest\\": "tests/unit"
    }
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  },
  "extra": {
    "branch-alias": {
      "dev-main": "0.17.5-dev"
    },
    "require-ci": {
      "miaoxing/dev": "miaoxing/dev as 8.x-dev",
      "miaoxing/phpstan-miaoxing": "miaoxing/phpstan-miaoxing as 3.x-dev"
    }
  },
  "suggest": {
    "ext-curl": "To use `\\Wei\\Http`",
    "ext-redis": "To use `\\Wei\\Redis`",
    "ext-simplexml": "To use `\\Wei\\WeChatApp`"
  }
}
