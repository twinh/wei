{
  "name": "wei/wei",
  "description": "A micro-framework provided powerful and simple APIs for faster and easier PHP development.",
  "type": "library",
  "keywords": [
    "framework",
    "cache",
    "database",
    "validator"
  ],
  "homepage": "https://github.com/twinh/wei",
  "license": "MIT",
  "require": {
    "php": ">=7.2"
  },
  "require-dev": {
    "doctrine/inflector": "^1.4|^2.0",
    "joseph-lenton/php-error": "dev-master",
    "phpunit/phpunit": "^8",
    "miaoxing/dev": "^8.1.2"
  },
  "authors": [
    {
      "name": "Twin Huang",
      "email": "twinhuang@qq.com",
      "homepage": "https://github.com/twinh/wei"
    }
  ],
  "autoload": {
    "psr-4": {
      "Wei\\": "lib"
    },
    "files": [
      "lib/Wei.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "WeiTest\\": "tests/unit"
    }
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  },
  "extra": {
    "branch-alias": {
      "dev-main": "0.12.6-dev"
    },
    "require-ci": {
      "miaoxing/dev": "miaoxing/dev as 8.x-dev",
      "miaoxing/phpstan-miaoxing": "miaoxing/phpstan-miaoxing as 1.x-dev"
    }
  },
  "suggest": {
    "doctrine/inflector": "^1.4|^2.0 To use `Str::pluralize|singularize()`"
  }
}
